{% extends('PSBAdminBundle::admintemplate.html.twig') %}

{% block body -%}
    <h1>Articles list</h1>

    <table class="records_list table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Datetime</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('articles_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.datetime %}{{ entity.datetime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.path }}</td>
                <td>
                    <a class="btn btn-success btn-xs" href="/articles/{{entity.path}}">View</a>
                    <a class="btn btn-default btn-xs" href="{{ path('articles_edit', { 'id': entity.id }) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-primary" href="{{ path('articles_new') }}">
            Create a new Article
        </a>
    {% endblock %}
