{% extends('PSBAdminBundle::admintemplate.html.twig') %}

{% block body -%}
	<h1>Pages list</h1>

	<table class="records_list table table-condensed">
		<thead>
			<tr>
				<th>Title</th>
				<th>Section</th>
				<th>Path</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		{% for entity in entities %}
			<tr>
				<td>{{ entity.title }}</td>
				<td>{{ entity.section }}</td>
				<td>{{ entity.path }}</td>
				<td>
					<a class="btn btn-xs btn-default" href="/{{entity.section}}/{{entity.path}}">Preview</a>
					<a class="btn btn-xs btn-default" href="{{ path('pages_edit', { 'id': entity.id }) }}">Edit</a>
				</td>
			</tr>
		{% endfor %}
		</tbody> 
	</table>

	<a class="btn btn-primary" href="{{ path('pages_new') }}">Create a new Page</a>

	</ul>
{% endblock %}
