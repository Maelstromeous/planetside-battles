{% extends('PSBAdminBundle::admintemplate.html.twig') %}

{% block body -%}
    <h1>Matches</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{{ entity.startTime }}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{{ entity.endTime }}</td>
            </tr>
            <tr>
                <th>Server</th>
                <td>{{ entity.server }}</td>
            </tr>
            <tr>
                <th>Continent</th>
                <td>{{ entity.continent }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Streamed</th>
                <td>{{ entity.streamed }}</td>
            </tr>
            <tr>
                <th>Vod</th>
                <td>{{ entity.vod }}</td>
            </tr>
            <tr>
                <th>Wscombat</th>
                <td>{{ entity.wsCombat }}</td>
            </tr>
            <tr>
                <th>Wschars</th>
                <td>{{ entity.wsChars }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('matches') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('matches_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
